{{!< default}}
{{#post}}
    <div class="flex flex-col justify-center mx-8">
        {{#link href="/articles/"}}
            <span
                class="p-3 my-5 text-sm font-normal text-black font-dmsans"
                href="{{@site.url}}"
            >
                <img
                    class="inline"
                    src="{{asset "img/left.svg"}}"
                    alt="left arrow"
                />
                <img
                    class="inline"
                    src="{{asset "img/left.svg"}}"
                    alt="left arrow"
                />
                <span class="ml-4">Back to Articles</span>
            </span>
        {{/link}}
    </div>
    <section class="mx-8 my-5 sm:inline-flex sm:flex-row">
        {{! <!-- post content --> }}
        <article class="block md:w-2/3 {{post_class}}">
            {{! <!-- post header --> }}
            <header>
                <p class="my-2 text-sm font-medium font-dmsans">
                    <time datetime="{{date format="YYYY-MM-DD"}}">{{date
                            format="D MMM YYYY"
                        }}</time>
                    <span class="bull">&bull;</span>
                    {{reading_time}}
                </p>
                <h2 class="my-3 text-2xl font-medium text-black font-dmsans">
                    {{title}}
                </h2>
                <div class="flex flex-row items-center">
                    {{#foreach authors}}
                        {{#if profile_image}}
                            <img
                                class="w-12 h-12 rounded-lg"
                                src="{{profile_image}}"
                                alt="avatar"
                            />
                        {{else}}
                            <img
                                class="w-12 h-12"
                                src="{{asset "img/user.svg"}}"
                                alt="avatar"
                            />
                        {{/if}}
                        <span class="ml-4 text-xs font-medium font-dmsans"><a
                                href="{{url}}"
                            >{{name}}</a>
                        </span>
                    {{/foreach}}
                </div>
            </header>
            {{! <!-- ./post header --> }}
            {{! <!-- post body --> }}
            <main
                class="my-8 leading-6 tracking-wider prose-sm prose font-montserrat sm:prose lg:prose-lg xl:prose-xl"
            >
                {{#if feature_image}}
                    <img
                        class="mb-8 main-post-img"
                        srcset="{{img_url feature_image size="s"}} 300w,
                        {{img_url feature_image size="m"}} 600w,
                        {{img_url feature_image size="l"}} 1000w,
                        {{img_url feature_image size="xl"}} 2000w"
                        sizes="(max-width: 1000px) 1000px, 2000px"
                        loading="lazy"
                        src="{{img_url feature_image size="xl"}}"
                        alt="{{title}}"
                    />
                {{/if}}
                {{content}}
            </main>
            {{! <!-- ./post body --> }}
            {{! <!-- post footer --> }}
            <footer class="py-3 border-t">
                <h4>Categories</h4>
                <p
                    class="grid w-full grid-cols-12 gap-1 my-4 leading-9 font-dmsans text-xxs"
                >
                    {{#foreach tags}}
                        <a
                            href="{{url}}"
                            class="col-span-4 py-3 text-gray-500 text-xxs"
                        >{{name}}
                            <img
                                src="{{asset "img/dot.svg"}}"
                                class="inline mx-0.5"
                            />
                        </a>
                    {{/foreach}}

                </p>
                <h4>Similar Reads</h4>
                <ul class="mt-3">
                    <li class="my-4">
                        {{! <partial src="postitem.html"></partial> }}
                    </li>
                    <li class="my-4">
                        {{! <partial src="postitem.html"></partial> }}
                    </li>
                    {{#get
                        "posts"
                        limit="5"
                        filter="tags:[{{post.tags}}]+id:-{{post.id}}"
                        include="tags"
                        as |related|
                    }}
                        <ul class="mt-3">

                            {{#foreach related}}
                                <li class="my-4">

                                    <a href="#" class="flex flex-row h-14">
                                        <img
                                            src="img/post1.jpg"
                                            class="w-16"
                                            alt="post thumbnail"
                                        />
                                        <div
                                            class="flex flex-col justify-between ml-5"
                                        >
                                            <p
                                                class="text-xs font-bold text-gray-900 font-dmsans line-clamp-2"
                                            >
                                                Digital Marketing in a nutshell
                                                today in a nutshell today in a
                                                nutshell today in a nutshell
                                                today in a nutshell todayin a
                                                nutshell today...
                                            </p>
                                            <p
                                                class="font-normal text-gray-600 font-dmsans text-xxs"
                                            >
                                                April 21st, 2021
                                            </p>
                                        </div>
                                    </a>
                                </li>
                            {{/foreach}}
                        </ul>
                    {{/get}}
                </ul>

                <div>
                    <p></p>
                </div>
            </footer>
            <!-- ./post footer -->
        </article>
        <!-- ./post content -->
        <aside class="hidden md:block md:w-1/3 md:mt-48 md:ml-14">
            <h4>More Reads</h4>
            <div>
                {{#get
                    "posts"
                    limit="5"
                    filter="tags:[{{post.tags}}]+id:-{{post.id}}"
                    include="tags"
                    as |related|
                }}
                    {{#foreach related}}
                        <a href="#" class="flex flex-row h-14">
                            <img
                                src="img/post1.jpg"
                                class="w-16"
                                alt="post thumbnail"
                            />
                            <div class="flex flex-col justify-between ml-5">
                                <p
                                    class="text-xs font-bold text-gray-900 font-dmsans line-clamp-2"
                                >
                                    Digital Marketing in a nutshell today in a
                                    nutshell today in a nutshell today in a
                                    nutshell today in a nutshell todayin a
                                    nutshell today...
                                </p>
                                <p
                                    class="font-normal text-gray-600 font-dmsans text-xxs"
                                >
                                    April 21st, 2021
                                </p>
                            </div>
                        </a>
                    {{/foreach}}
                {{/get}}
            </div>
        </aside>
    </section>

    <aside class="gh-readmore">
        <div class="gh-readmore-inner gh-container">
            <div class="gh-readmore-next">
                {{#next_post}}<a href="{{url}}">
                        <img
                            class="inline"
                            src="{{asset "img/left.svg"}}"
                            alt="left arrow"
                        /><h4>{{title}}</h4></a>{{/next_post}}

            </div>
            <div class="gh-readmore-prev">
                {{#prev_post}}<a href="{{url}}">
                        <h4>{{title}}</h4>
                        <img
                            class="inline"
                            src="{{asset "img/left.svg"}}"
                            alt="left arrow"
                        />
                    </a>{{/prev_post}}
            </div>
        </div>
    </aside>

{{/post}}