{{!< default}}
<h3
    class="mb-2 text-sm font-medium text-black font-dmsans md:font-medium md:text-3xl"
>
    Articles
</h3>
{{#get "tags" limit="all" include="count.posts,posts" order="count.post desc"}}
    <header class="w-full">
        <p
            class="grid w-full grid-cols-12 gap-1 my-4 leading-9 font-dmsans text-xxs"
        >
            {{#foreach tags}}
                <a
                    href="{{url}}"
                    class="col-span-4 py-3 text-gray-500 text-xxs"
                >{{name}}({{count.posts}})
                    <img
                        src="{{asset "img/dot.svg"}}"
                        class="mx-0.5 inline"
                    /></a>
            {{/foreach}}
        </p>
    </header>

{{/get}}
{{#get "posts" include="tags"}}
    <div class="grid grid-cols-12 gap-6">
        {{! Loop through our posts collection }}
        {{#foreach posts}}
            <div class="col-span-12 sm:col-span-4 lg:col-span-3">
                <article class="home-featured-post h-[282px]">
                    <header>
                        {{#if feature_image}}
                            <a href="{{url}}">
                                <img
                                    class="w-full max-h-40"
                                    src="{{feature_image}}"
                                    alt="post thumbnail"
                                />
                            </a>
                        {{else}}
                            <a href="{{url}}">
                                <img
                                    class="w-full max-h-40"
                                    src="{{asset "img/default.png"}}"
                                    alt="post thumbnail"
                                />
                            </a>
                        {{/if}}
                        <div
                            class="flex flex-row justify-between h-3.5 my-2 px-5"
                        >
                            <time
                                class="font-medium text-black font-dmsans text-xxs"
                                datetime="{{date format="YYYY-MM-DD"}}"
                            >
                                {{date format="MMMM DD, YYYY"}}
                            </time>
                            <div class="flex flex-row">
                                <a class="mx-0.5" href="#"><img
                                        src="{{asset "img/Share.svg"}}"
                                        alt="share"
                                    /></a>
                            </div>
                        </div>
                    </header>
                    <main class="px-5 my-5">
                        <a href="{{url}}">
                            <h5 class="home-featured-title">
                                {{title}}
                            </h5>
                        </a>
                    </main>
                    <footer class="my-2">
                        <ul class="flex flex-row flex-wrap justify-evenly">
                            {{#foreach tags}}
                                <li
                                    class="inline-flex flex-row self-center my-1 text-left text-gray-500 align-middle text-xxs"
                                >
                                    {{name}}<span class="text-sm text-black">
                                        &bull; &nbsp;</span>
                                </li>
                            {{/foreach}}
                        </ul>
                    </footer>
                </article>
            </div>
        {{/foreach}}

    </div>
{{/get}}