<!-- desktop header -->
<header
    class="hidden md:flex md:flex-row md:fixed md:items-center md:w-screen md:h-20 md:bg-white md:justify-between md:px-9"
>
    <!-- logo -->
    <a href="{{@site.url}}">
        {{#if @site.logo}}
            <img
                src="{{@site.logo}}"
                class="text-lg font-extrabold text-center lowercase place-self-center"
                alt="{{@site.title}}"
            />
        {{else}}
            <p
                class="text-2xl font-extrabold text-center lowercase font-dmsans place-self-center"
            >{{@site.title}}</p>
        {{/if}}
    </a>
    <!-- main nav menu -->
    <nav
        id="desktop-menu"
        class="inline-flex flex-row items-center justify-end w-1/3 text-sm font-normal capitalize font-montserrat"
    >
        {{navigation type="primary"}}

    </nav>
</header>
<!-- ./desktop header -->
<!-- mobile header -->
<header
    class="fixed flex flex-row items-center justify-around w-screen h-20 bg-white md:hidden"
>
    <!-- logo -->
    <a href="{{@site.url}}">
        {{#if @site.logo}}
            <img
                src="{{@site.logo}}"
                class="text-lg font-extrabold text-center lowercase place-self-center"
                alt="{{@site.title}}"
            />
        {{else}}
            <p
                class="text-2xl font-extrabold text-center lowercase font-dmsans place-self-center"
            >{{@site.title}}</p>
        {{/if}}
    </a>
    <!-- mobile menu toggle -->
    <input type="checkbox" id="overlay-input" class="hidden peer" />
    <label
        id="overlay-button"
        for="overlay-input"
        class="absolute z-50 cursor-pointer select-none right-8 top-3 group"
    >
        <span
            class="burger-span bg-gray-900 relative block before:visible before:bg-gray-900 before:relative before:block before:content-[''] after:bg-gray-900 after:relative after:block after:content-[''] group-hover:bg-gray-700 group-hover:before:bg-gray-700 group-hover:after:bg-gray-700 peer-checked:group-hover:bg-transparent peer-checked:bg-transparent"
        ></span>
    </label>
    <!-- mobile main nav menu -->
    <nav
        id="mobile-menu"
        class="fixed top-0 z-20 flex flex-col items-center justify-center invisible w-screen h-screen pl-0 text-center bg-white peer-checked:visible"
    >
        {{navigation type="primary"}}
    </nav>
</header>
<!-- ./mobile header -->