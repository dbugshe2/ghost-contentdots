{
    "name": "contentdots",
    "description": "A custom ghost theme for contentdots website",
    "demo": "https://contentdots.com",
    "version": "1.0.7",
    "engines": {
        "ghost": ">=4.0.0",
        "ghost-api": "v4",
        "node": "14.16.1",
        "npm": "6.14.12"
    },
    "license": "MIT",
    "screenshots": {
        "desktop": "assets/screenshot-desktop.png",
        "mobile": "assets/screenshot-mobile.png"
    },
    "scripts": {
        "dev": "gulp",
        "zip": "gulp zip",
        "test": "gscan .",
        "test:ci": "gscan --fatal --verbose .",
        "pretest": "gulp build",
        "build": "gulp build"
    },
    "author": {
        "name": "Maroof Shittu",
        "email": "dbugshe2@gmail.com",
        "url": "https://meekroofy.com"
    },
    "gpm": {
        "type": "theme",
        "categories": [
            "Minimal",
            "Magazine",
            "Blog"
        ]
    },
    "keywords": [
        "ghost",
        "theme",
        "ghost-theme"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/dbugshe2/contentdots.git"
    },
    "dependencies": {
        "@tailwindcss/forms": "^0.3.3",
        "@tailwindcss/line-clamp": "^0.2.1",
        "@tailwindcss/typography": "^0.4.1",
        "tailwindcss": "^2.1.1"
    },
    "devDependencies": {
        "autoprefixer": "^10.2.6",
        "beeper": "2.1.0",
        "browser-sync": "^2.26.14",
        "cssnano": "5.0.6",
        "del": "^6.0.0",
        "gscan": "4.1.0",
        "gulp": "4.0.2",
        "gulp-clean-css": "^4.3.0",
        "gulp-concat": "^2.6.1",
        "gulp-html-partial": "^1.0.1",
        "gulp-imagemin": "^7.1.0",
        "gulp-livereload": "^4.0.2",
        "gulp-postcss": "9.0.0",
        "gulp-purgecss": "^3.1.3",
        "gulp-sourcemaps": "3.0.0",
        "gulp-terser": "^2.0.1",
        "gulp-uglify": "3.0.2",
        "gulp-util": "3.0.8",
        "gulp-watch": "5.0.1",
        "gulp-zip": "5.1.0",
        "log-symbols": "^4.1.0",
        "postcss": "8.3.5",
        "postcss-color-mod-function": "3.0.3",
        "postcss-easy-import": "3.0.0"
    },
    "browserslist": [
        "defaults"
    ],
    "config": {
        "posts_per_page": 15,
        "image_sizes": {
            "xxs": {
                "width": 30
            },
            "xs": {
                "width": 100
            },
            "s": {
                "width": 300
            },
            "m": {
                "width": 600
            },
            "l": {
                "width": 1200
            },
            "xl": {
                "width": 2000
            }
        }
    }
}
