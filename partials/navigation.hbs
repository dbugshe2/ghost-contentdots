{{! replace ghost nav markup }}
{{#if isSecondary}}
    <div class="secondary-nav">
    {{#foreach navigation}}
        <a href="{{url absolute="true"}}">{{label}}</a>
    {{/foreach}}
 </div>
{{else}}
    <!-- <nav > -->
    <ul>
        {{#foreach navigation}}
            <li class="mx-2 my-3">
                <a class="p-1 {{#if current}} nav-current{{/if}}" href="{{url}}">{{label}}</a>
            </li>
        {{/foreach}}
    </ul>
    <!-- </nav> -->
{{/if}}
{{! end of custom nav }}