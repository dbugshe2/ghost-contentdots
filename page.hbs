{{!< default}}

{{#post}}
    <article class="{{post_class}} my-8 leading-6 tracking-wider prose-sm prose font-montserrat sm:prose lg:prose-lg xl:prose-xl">

        <header class="gh-header gh-canvas">
            <h1 class="gh-title">{{title}}</h1>

            {{#if custom_excerpt}}
                <p class="gh-excerpt">{{custom_excerpt}}</p>
            {{/if}}

            {{#if feature_image}}
                <img
                    class="gh-feature-image"
                    src="{{feature_image}}"
                    alt="{{title}}"
                />
            {{/if}}
        </header>

        <div class="gh-content gh-canvas">
            {{{content}}}
        </div>

    </article>
{{/post}}