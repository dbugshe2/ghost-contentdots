{
  "name": "contentdots",
  "version": "1.0.0",
  "description": "A clean, minimal blog theme for the Ghost publishing platform",
  "engines": {
    "ghost": ">=4.0.0",
    "ghost-api": "v4"
  },
  "scripts": {
    "test": "gscan ."
  },
  "keywords": [
    "ghost",
    "theme",
    "ghost-theme"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/dbugshe2/contentdots.git"
  },
  "author": {
    "name": "Maroof Shittu",
    "email": "maroof.a.shittu@gmail.com",
    "url": "https://meekroofy.com"
  },
  "license": "ISC",
  "screenshots": {
    "desktop": "assets/screenshot-desktop.png",
    "mobile": "assets/screenshot-mobile.png"
  },
  "devDependencies": {
    "tailwindcss": "^2.2.2"
  },
  "browserslist": [
    "defaults"
  ],
  "config": {
    "posts_per_page": 25,
    "image_sizes": {
      "xxs": {
        "width": 30
      },
      "xs": {
        "width": 100
      },
      "s": {
        "width": 300
      },
      "m": {
        "width": 600
      },
      "l": {
        "width": 1000
      },
      "xl": {
        "width": 2000
      }
    }
  },
  "renovate": {
    "extends": [
      "@tryghost:theme"
    ]
  }
}
